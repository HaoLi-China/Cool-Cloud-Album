<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  >
  
  <ImageView
  android:id="@+id/album_dir_skin"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/back4"
  />
  
<EditText 
  android:id="@+id/edit"
  android:layout_alignParentBottom="true"
  android:layout_alignParentLeft="true" 
  android:layout_width="fill_parent" 
  android:layout_height="wrap_content" 
  />
  
  <Button
  android:id="@+id/search"
  android:layout_alignTop="@+id/edit"
  android:layout_alignRight="@+id/edit"
  android:layout_marginRight="5dip"
  android:layout_marginTop="5dip"
  android:layout_width="wrap_content" 
  android:layout_height="wrap_content" 
  android:background="@drawable/search1"
  />
  
  <Button
  android:id="@+id/voice"
  android:layout_alignTop="@+id/edit"
 android:layout_toLeftOf="@+id/search"
  android:layout_marginRight="5dip"
  android:layout_marginTop="5dip"
  android:layout_width="wrap_content" 
  android:layout_height="wrap_content" 
  android:background="@drawable/voice1"
  />
  
  <Button
  android:id="@+id/web_album_button"
  android:layout_width="80dp"
  android:layout_height="80dp"
  android:layout_above="@id/edit"
  android:background="@drawable/web_album"
  />
  
<Gallery android:id="@+id/mygallery"
  android:layout_alignParentTop="true"
  android:layout_alignParentLeft="true" 
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
/>
</RelativeLayout>