<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/list_items" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:paddingLeft="30dip" >
	<ImageView android:id="@+id/ItemImage"
		android:layout_alignParentLeft="true" android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	<TextView android:id="@+id/ItemText" android:layout_height="wrap_content"
		android:textSize="25dip" android:textColor="#0000FF"
		android:layout_width="fill_parent"
		android:layout_toRightOf="@id/ItemImage"
		android:layout_alignParentBottom="true" android:layout_marginLeft="25dip"/>
</RelativeLayout>